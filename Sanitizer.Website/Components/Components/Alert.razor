@if (!string.IsNullOrEmpty(Message) && IsVisible)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Message
        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close" @onclick="Hide">
        </button>
    </div>
}

@code {
    [Parameter]
    public string Message { get; set; }

    private bool IsVisible { get; set; }

    public void Show()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }
}
